#include <stdio.h>

int main()
{
    int i, j, N;

 printf("Ingrese numero de FILAS: ");
    scanf("%d", &N);

    for(i=N; i>=1; i--)
    {
        //Imprime la primera parte
        for(j=1; j<=i; j++)
        {
            printf("%d", j);
        }

        // Imprime los espacios 
        for(j=i*2; j<N*2; j++)
        {
            printf(" ");
        }

        // Imprime la segunda parte
        for(j=i; j>=1; j--)
        {
            printf("%d", j);
        }

        printf("\n");
    }

    return 0;
}
